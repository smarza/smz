{
  "name": "@smz-ui/layout",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/smz-layout/src",
  "prefix": "lib",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "dependsOn": [
        {
          "target": "build",
          "projects": ["@smz-ui/core"]
        }
      ],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/smz-layout/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/smz-layout/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/smz-layout/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
